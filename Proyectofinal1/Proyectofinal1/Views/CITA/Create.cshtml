@model Proyectofinal1.Models.CITA

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
